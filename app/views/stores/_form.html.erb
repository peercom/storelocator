<%= form_for @store, :html => {:class => 'uniForm'} do |f| %>
	<% if @store.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

			<ul>
				<% @store.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<fieldset class="inlineLabels">
		<legend>Name</legend>
		<div class="ctrlHolder">
			<%= f.label :name %>
			<%= f.text_field :name %>
			<p class="formHint">Enter the locations name as it will be shown to users browsing the site.</p>
		</div>
	</fieldset>
	<fieldset class="inlineLabels">
		<legend>Address</legend>
		<div class="ctrlHolder">
			<%= f.label :country %>
			<%= country_select("store", "country", [ "Great Britain", "Switzerland", "Germany", "France" ]) %>
		</div>
		<div class="ctrlHolder">
			<%= f.label :state %>
			<%= f.text_field :state %>
		</div>
		<div class="ctrlHolder">
			<%= f.label :zip %>
			<%= f.text_field :zip %>
		</div>
		<div class="ctrlHolder">
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>
		<div class="ctrlHolder">
			<%= f.label :street %>
			<%= f.text_field :street %>
		</div>
	</fieldset>
	<div class="buttonHolder">
		<%= f.submit %>
	</div>
<% end %>
